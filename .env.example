# ============== Docker 基础设施配置 ==============
# 服务启用开关 (true/false)
ENABLE_NGINX=true
ENABLE_PHP=true
ENABLE_MYSQL=true
ENABLE_REDIS=true
ENABLE_PHPMYADMIN=true

# 端口配置
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443
MYSQL_PORT=3306
REDIS_PORT=6379
PHPMYADMIN_PORT=8080

# 存储路径配置
PROJECT_PATH=./src

# ============== PHP & Laravel 版本配置 ==============
# Laravel 版本 (例如: "10.*", "9.*", "5.5.*" 或 "latest")
LARAVEL_VERSION=latest

# PHP 版本 (需与 Laravel 版本匹配)
# Laravel 11.x -> PHP 8.2+
# Laravel 10.x -> PHP 8.1+
# Laravel 9.x  -> PHP 8.0 - 8.2
# Laravel 8.x  -> PHP 7.3 - 8.1
# Laravel 7.x  -> PHP 7.2.5 - 8.0
# Laravel 6.x  -> PHP 7.2 - 8.0 (LTS)
# Laravel 5.5  -> PHP 7.0 - 7.3 (LTS)
PHP_VERSION=8.2

PHP_EXTENSIONS=pdo pdo_mysql mysqli mbstring exif pcntl bcmath opcache intl zip gd redis
PHP_TIMEZONE=Asia/Shanghai

# MySQL 配置
MYSQL_VERSION=8.0

# Redis 配置
REDIS_VERSION=alpine

# ============== 应用配置 (仅用于 install.sh 初始化) ==============
APP_NAME=Laravel
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

# ============== 数据库配置 ==============
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=laravel
DB_USERNAME=laravel
DB_PASSWORD=secret
DB_ROOT_PASSWORD=root

# ============== Redis 配置 ==============
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# ============== 缓存配置 ==============
CACHE_DRIVER=redis
SESSION_DRIVER=redis
QUEUE_CONNECTION=redis

# ============== 邮件配置 ==============
MAIL_MAILER=smtp
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS=null
MAIL_FROM_NAME="${APP_NAME}"

# ============== Laravel 队列 ==============
QUEUE_CONNECTION=redis

# ============== Session 配置 ==============
SESSION_LIFETIME=120

# ============== 日志配置 ==============
LOG_CHANNEL=stack
LOG_LEVEL=debug

# ============== 其他配置 ==============
BROADCAST_DRIVER=log