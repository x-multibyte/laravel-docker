# ============== Docker 基础设施配置 ==============
# 服务启用开关 (true/false)
ENABLE_NGINX=true
ENABLE_PHP=true
ENABLE_MYSQL=true
ENABLE_REDIS=true
ENABLE_PHPMYADMIN=true

# 端口配置
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443
MYSQL_PORT=3306
REDIS_PORT=6379
PHPMYADMIN_PORT=8080

# 存储路径配置
PROJECT_PATH=./src

# PHP 配置
PHP_VERSION=8.2
PHP_EXTENSIONS=pdo pdo_mysql mysqli mbstring exif pcntl bcmath opcache intl zip gd redis
PHP_TIMEZONE=Asia/Shanghai

# MySQL 配置
MYSQL_VERSION=8.0

# Redis 配置
REDIS_VERSION=alpine

# ============== 应用配置 ==============
APP_NAME=Laravel
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

# ============== 数据库配置 ==============
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=laravel
DB_USERNAME=laravel
DB_PASSWORD=secret
DB_ROOT_PASSWORD=root

# ============== Redis 配置 ==============
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# ============== 缓存配置 ==============
CACHE_DRIVER=redis
SESSION_DRIVER=redis
QUEUE_CONNECTION=redis

# ============== 邮件配置 ==============
MAIL_MAILER=smtp
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS=null
MAIL_FROM_NAME="${APP_NAME}"

# ============== Laravel 队列 ==============
QUEUE_CONNECTION=redis

# ============== Session 配置 ==============
SESSION_LIFETIME=120

# ============== 日志配置 ==============
LOG_CHANNEL=stack
LOG_LEVEL=debug

# ============== 其他配置 ==============
BROADCAST_DRIVER=log
